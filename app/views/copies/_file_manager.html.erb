<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New copy", new_api_v1_copy_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>

   <tbody>
      <% @copies.each do |copy| %>
         <tr>
            <td><%= copy.name %></td>
            <td><%= link_to "Download copy", copy.attachment_url %></td>
            <td><%= button_to "Delete",  copy, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{copy.name}?" %></td>
         </tr>
      <% end %>
   </tbody>

</table>