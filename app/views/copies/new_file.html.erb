<div class="container d-flex flex-column">
   <h2>Dashboard | Copies uploader</h2>
   <% if !@copy.errors.empty? %>
      <div class = "alert alert-error">

         <ul>
            <% @copy.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
            <% end %>
         </ul>

      </div>
   <% end %>
   <div class ="well">
      <%= form_for(@copy, url: api_v1_copies_path, html: { multipart: true }) do |f| %>
         <%= f.label :name %>
         <%= f.text_field :name %>
         <%= f.label :attachment %>
         <%= f.file_field :attachment %>
         <%= f.submit "Save", class: "btn btn-primary" %>
      <% end %>
   </div>
</div>